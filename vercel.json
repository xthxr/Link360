{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(css|js|assets|images)/.*",
      "dest": "/public/"
    },
    {
      "src": "/.*\\.(ico|png|jpg|jpeg|gif|svg|webp|css|js)",
      "dest": "/public/"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
